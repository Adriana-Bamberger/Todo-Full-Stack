{
  "name": "boilerplate-express-api",
  "type": "module",
  "version": "0.1.2",
  "description": "Express boilerplate for APIs with Knex.js",
  "main": "server/index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch server/index.ts",
    "build": "esbuild --packages=external --platform=node --format=esm --outfile=dist/index.js --bundle server/index.ts",
    "knex": "knex --knexfile ./server/db/knexfile.js",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-academy-challenges/boilerplate-express-api.git"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "author": "Dev Academy Aotearoa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dev-academy-challenges/boilerplate-express-api/issues"
  },
  "homepage": "https://github.com/dev-academy-challenges/boilerplate-express-api#readme",
  "devDependencies": {
    "supertest": "^6.3.4",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "express": "^4.17.2",
    "knex": "^2.5.1",
    "sqlite3": "^5.1.6"
  }
}