{
  "name": "sweet-as-snacks-rtk",
  "version": "0.2.3",
  "description": "practice with redux toolkit",
  "repository": "https://github.com/dev-academy-challenges/challenges.git",
  "main": "server/index.js",
  "author": "Dev Academy Aotearoa",
  "license": "ISC",
  "keywords": [
    "frontend",
    "redux",
    "redux-toolkit",
    "react"
  ],
  "scripts": {
    "dev": "run-p dev:client dev:server build:css",
    "dev:client": "vite",
    "dev:server": "nodemon server/index.js",
    "start": "node server",
    "build": "vite",
    "server": "node server",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "build:css": "npx tailwindcss -i client/input.css -o server/public/main.css --watch",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      "@babel/preset-env",
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "@devacademy/eslint-config/react",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "typescript": "~4.8.4"
  },
  "devDependencies": {
    "@babel/core": "^7.15.6",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.15.6",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.18.6",
    "@reduxjs/toolkit": "^1.9.1",
    "@testing-library/react": "^13.4",
    "@types/react": "^18.0.23",
    "@vitejs/plugin-react": "^3.0.1",
    "babel-loader": "^8.2.2",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.29.4",
    "jest": "^29.2.2",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.1",
    "react": "^18.0.2",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.4",
    "redux": "^4.1.1",
    "superagent": "7.1.1",
    "tailwindcss": "^3.2.4",
    "vite": "^4.0.4",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1",
    "@devacademy/eslint-config": "^1.8.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "browserslist": "> 2%, not dead"
}