{
  "name": "charlottes-web-log-jsx",
  "type": "module",
  "version": "0.1.0",
  "description": "A spider's blog about her web",
  "repository": "https://github.com/dev-academy-challenges/charlottes-web-log.git",
  "main": "server/index.ts",
  "scripts": {
    "start": "run-s build start:server",
    "start:server": "node dist/index.js",
    "build": "esbuild server/index.js --bundle --packages=external  --outfile=dist/index.js --jsx=automatic --platform=node --format=esm",
    "dev": "run-p build:watch dev:watch",
    "build:watch": "esbuild server/index.js --bundle --packages=external  --outfile=dist/index.js --jsx=automatic --platform=node --format=esm --watch",
    "dev:watch": "nodemon dist/index.js",
    "test": "vitest",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'"
  },
  "eslintConfig": {
    "extends": "@devacademy/eslint-config/react",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "author": "Dev Academy Aotearoa",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@devacademy/eslint-config": "^1.9.1",
    "@types/express": "^4.17.14",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-c8": "^0.30.1",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.1",
    "react": "^18.0.2",
    "react-dom": "^18.2.0",
    "vitest": "^0.34.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "browserslist": "> 2%, not dead"
}
