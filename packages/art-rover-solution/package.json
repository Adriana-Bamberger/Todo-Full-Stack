{
  "name": "art-rover-solution",
  "type": "module",
  "version": "0.1.0",
  "description": "Practise joins",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "run-p dev:client dev:server",
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "run-s build:client build:server",
    "build:client": "vite build",
    "build:server": "esbuild --packages=external --platform=node --format=esm --outfile=dist/server.js --bundle server/index.ts",
    "test": "vitest",
    "knex": "knex --knexfile ./server/db/knexfile.js",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-academy-challenges/knex-joins-stories.git"
  },
  "eslintConfig": {
    "extends": [
      "@devacademy"
    ]
  },
  "keywords": [],
  "author": "Enspiral Dev Academy",
  "license": "ISC",
  "homepage": "https://github.com/dev-academy-challenges/knex-joins-stories#readme",
  "dependencies": {
    "express": "^4.17.2",
    "express-handlebars": "^6.0.2",
    "knex": "^2.5.1",
    "npm-run-all": "^4.1.5",
    "sqlite3": "^5.1.6",
    "tsx": "^3.14.0"
  },
  "devDependencies": {
    "@devacademy/eslint-config": "^1.9.1",
    "@tanstack/react-query": "^5.0.5",
    "@testing-library/dom": "^8.17.1",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/superagent": "^4.1.20",
    "@types/supertest": "^2.0.15",
    "@vitejs/plugin-react": "^4.0.4",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "jsdom": "^22.1.0",
    "nock": "^13.3.6",
    "nodemon": "^2.0.15",
    "prettier": "2.6.1",
    "react-router-dom": "^6.11.2",
    "supertest": "^6.2.2",
    "vitest": "^0.34.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}