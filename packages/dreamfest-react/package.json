{
  "name": "dreamfest-react",
  "type": "module",
  "version": "0.1.0",
  "description": "NZ's premier culture festival",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "run-p dev:client dev:server",
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "run-s build:client build:server",
    "build:client": "vite build",
    "build:server": "esbuild --packages=external --platform=node --format=esm --outfile=dist/server.js --bundle server/index.ts",
    "test": "vitest",
    "knex": "knex --knexfile ./server/db/knexfile.js",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'"
  },
  "author": "Dev Academy Aotearoa",
  "license": "ISC",
  "keywords": [
    "db",
    "database",
    "backend"
  ],
  "homepage": "https://github.com/dev-academy-challenges/dreamfest#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-academy-challenges/dreamfest.git"
  },
  "eslintConfig": {
    "extends": "@devacademy"
  },
  "dependencies": {
    "express": "^4.17.2",
    "express-handlebars": "^6.0.2",
    "knex": "^2.5.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@devacademy/eslint-config": "^1.9.1",
    "@tanstack/react-query": "^4.35.3",
    "@testing-library/dom": "^8.17.1",
    "@testing-library/jest-dom": "^6.0.0",
    "@types/express": "^4.17.14",
    "esbuild": "^0.18.16",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jsdom": "^22.1.0",
    "nodemon": "^2.0.15",
    "prettier": "2.6.1",
    "react-router-dom": "^6.16.0",
    "superagent": "^8.1.2",
    "tsx": "^3.12.7",
    "vitest": "^0.34.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
