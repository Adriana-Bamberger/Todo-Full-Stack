{
  "name": "server-side-rendering-solution",
  "version": "0.1.0",
  "description": "Server-side rendering with Handlebars templates",
  "author": "Dev Academy",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "start": "run-s build start:server",
    "start:server": "node dist/index.js",
    "build": "esbuild server/index.js --bundle --packages=external --outfile=dist/index.js --jsx=automatic --platform=node --format=esm",
    "dev": "run-p build:watch dev:watch",
    "build:watch": "esbuild server/index.js --bundle --packages=external --outfile=dist/index.js --jsx=automatic --platform=node --format=esm --watch",
    "dev:watch": "nodemon dist/index.js",
    "test": "vitest",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'"
  },
  "eslintConfig": {
    "extends": "@devacademy"
  },
  "dependencies": {
    "express": "^4.17.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@devacademy/eslint-config": "^1.9.1",
    "esbuild": "^0.19.2",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.2.2",
    "vitest": "^0.34.1"
  }
}
