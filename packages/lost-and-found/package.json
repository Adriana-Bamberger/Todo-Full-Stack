{
  "name": "lost-and-found",
  "version": "0.4.0",
  "description": "Lost and Found",
  "repository": "https://github.com/dev-academy-challenges/lost-and-found.git",
  "main": "server/index.ts",
  "scripts": {
    "start": "node dist/server/index.js",
    "dev": "run-p dev:client dev:server",
    "dev:client": "vite",
    "dev:server": "nodemon --watch server server/index.ts",
    "knex": "knex --knexfile ./server/db/knexfile.js",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'",
    "test": "vitest",
    "build": "run-s build:client build:server",
    "build:client": "vite build",
    "build:server": "tsc -p server/tsconfig.json",
    "dokku:deploy": "git push dokku main",
    "dokku:migrate": "dokku run npm run knex migrate:latest",
    "dokku:rollback": "dokku run npm run knex migrate:rollback",
    "dokku:seed": "dokku run npm run knex seed:run"
  },
  "keywords": [
    "fullstack"
  ],
  "author": "Dev Academy Aotearoa",
  "license": "ISC",
  "eslintConfig": {
    "extends": "@devacademy/eslint-config/react",
    "ignorePatterns": [
      "bundle.js"
    ],
    "rules": {}
  },
  "devDependencies": {
    "@auth0/auth0-react": "^1.12.0",
    "@devacademy/eslint-config": "^1.8.0",
    "@redux-devtools/extension": "^3.2.3",
    "@types/express": "^4.17.14",
    "@types/react": "^18.0.23",
    "@types/react-dom": "^18.0.7",
    "@types/react-redux": "^7.1.25",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-c8": "^0.30.1",
    "bulma": "^0.9.2",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.1",
    "react": "^18.0.2",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.4",
    "react-router-dom": "^6.4.2",
    "redux": "^4.1.1",
    "redux-thunk": "^2.4.2",
    "sass": "^1.50.1",
    "sqlite3": "^5.1.2",
    "superagent": "7.1.1",
    "supertest": "^6.2.2",
    "typescript": "~4.8.4",
    "vite": "^4.3.3",
    "vitest": "^0.30.1"
  },
  "dependencies": {
    "authenticare": "^0.4.9",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "knex": "^2.3.0",
    "ts-node": "^10.9.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "browserslist": "> 2%, not dead"
}
